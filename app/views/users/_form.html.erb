<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@user, html: { multipart: true }) do |f| %>
    <div class="message">
      <%= render './shared/error_messages' %>
    </div>
    <div class="field">
      <%= f.label :fname %><br>
      <%= f.text_field :fname, class: 'form-control' %><br>
    </div>    
    <div class="field">
      <%= f.label :lname %><br>
      <%= f.text_field :lname, class: 'form-control' %><br>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %><br>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control'  %><br>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>
      <input type='hidden' name='authenticity_token' value='<%=form_authenticity_token()%>'>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.text_field :image, class: 'form-control'  %><br>
      <%= f.file_field :picture %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
